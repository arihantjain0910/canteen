      <a href="#dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
      <a href="#crm"><i class="fas fa-address-book"></i> CRM</a>
      <a href="#analytics"><i class="fas fa-chart-line"></i> Analytics</a>
      <a href="#page-layouts"><i class="fas fa-file-alt"></i> Page Layouts</a>
      <a href="#widgets"><i class="fas fa-th"></i> Widgets</a>
      <a href="#ui-elements"><i class="fas fa-cogs"></i> UI Elements</a>
      <a href="#forms"><i class="fas fa-edit"></i> Forms</a>
      <a href="#tables"><i class="fas fa-table"></i> Tables</a>
    </div>

    <div class="content">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Dashboard</a>
        <button
