  <div class="main-content">
    <div class="container">
        <h2 style="text-align: center;">Menu Form</h2>
        <form action="/submit-rate-list" method="POST">
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="day" class="required">Day</label>
              <select class="form-control" id="day" name="day" required>
                <option value="" disabled selected>Select Day</option>
                <option value="MONDAY">MONDAY</option>
                <option value="TUESDAY">TUESDAY</option>
                <option value="WEDNESDAY">WEDNESDAY</option>
                <option value="THURSDAY">THURSDAY</option>
                <option value="FRIDAY">FRIDAY</option>
                <option value="SATURDAY">SATURDAY</option>
                <!-- Add more options as needed -->
              </select>
            </div>
            <div class="form-group col-md-4">
                <label for="breakfast">Breakfast Item</label>
                <input type="text" class="form-control" id="breakfast" name="breakfast" required>
            </div>
            <div class="form-group col-md-4">
                <label for="breakfast_price">Breakfast Price</label>
                <input type="decimal" class="form-control" id="breakfast_price" name="breakfast_price" min="0" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-4">
                <label for="lunch">Lunch</label>
                <input type="text" class="form-control" id="lunch" name="lunch" required>
            </div>
            <div class="form-group col-md-4">
              <label for="lunch_price">Lunch</label>
              <input type="decimal" class="form-control" id="lunch_price" name="lunch_price" min="0" required>
          </div>
          <div class="form-group col-md-4">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
        </div>
      </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
