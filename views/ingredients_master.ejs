</nav>
  <div class="container mt-5">
    <!-- <div class="d-flex justify-content-center mb-4">
        <a href="/admin-dashboard" class="btn btn-success mx-1">Home</a>
        <a href="/view_ingredients_master" class="btn btn-info mx-1">View Ingredient Item Master List</a>
    </div> -->
    <div class="form-box">
      <h2>Ingredient Details Form</h2>
      <form id="ingredientForm" method="POST" action="/ingredients_master">
        <div class="form-row">
          <div class="form-group col-md-2">
            <label for="ingredient_item_code">Ingredient Item Code</label>
            <input type="text" class="form-control" id="ingredient_item_code" name="ingredient_item_code" required>
          </div>
          <div class="form-group col-md-4">
            <label for="ingredient_item_description">Ingredient Item Description</label>
            <input type="text" class="form-control" id="ingredient_item_description" name="ingredient_item_description" required>
          </div>
          <div class="form-group col-md-2">
            <label for="uom" class="required">UOM</label>
            <select class="form-control" id="uom" name="uom" required>
              <option value="" disabled selected>Select UOM</option>
              <option value="KG">KG</option>
              <option value="L">L</option>
              <option value="NO">NOs</option>
              <!-- Add more options as needed -->
            </select>
          </div>
          <div class="form-group col-md-2">
            <label for="ingredient_item_type" class="required">Item Type</label>
            <select class="form-control" id="ingredient_item_type" name="ingredient_item_type" required>
              <option value="" disabled selected>Select Type</option>
              <option value="GROCERIES">GROCERY</option>
              <option value="SAUCES">SAUCES</option>
              <option value="FROZEN OR DIARY PRODUCT">FROZEN & DIARY PRODUCT</option>
              <option value="BAKERY">BAKERY</option>
              <option value="VEGETABLE">VEGETABLE</option>
              <!-- Add more options as needed -->
            </select>
          </div>
          <div class="form-group col-md-2">
            <label for="opening_balance_quantity">Opening Qty (in KG)</label>
            <input type="decimal" class="form-control" id="opening_balance_quantity" name="opening_balance_quantity" required>
          </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies (if needed) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

  <script>
    document.getElementById('ingredient_item_code').addEventListener('input', function() {
        this.value = this.value.toUpperCase();
    });
  </script>
  <script>
    document.getElementById('ingredient_item_description').addEventListener('input', function() {
        this.value = this.value.toUpperCase();
    });
  </script>
  <script>
    document.getElementById('uom').addEventListener('input', function() {
        this.value = this.value.toUpperCase();
    });
  </script>
   <script>
    document.getElementById('ingredient_item_type').addEventListener('input', function() {
        this.value = this.value.toUpperCase();
    });
  </script>
</body>
