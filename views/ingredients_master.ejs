<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ingredient Form</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>
<body>

  <div class="container mt-5">
    <div class="d-flex justify-content-center">
        <a href="/admin-dashboard" class="btn btn-success mx-1">Home</a>
        <a href="/view_ingredients_master" class="btn btn-info mx-1">View Ingredient Item Master List</a>
    </div>
    <h2>Ingredient Details Form</h2>
    <form id="ingredientForm" method="POST" action="/ingredients_master">
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="ingredient_item_code">Ingredient Item Code</label>
          <input type="text" class="form-control" id="ingredient_item_code" name="ingredient_item_code" required>
        </div>
        <div class="form-group col-md-7">
          <label for="ingredient_item_description">Ingredient Item Description</label>
          <input type="text" class="form-control" id="ingredient_item_description" name="ingredient_item_description" required>
        </div>
        <div class="form-group col-md-2">
            <label for="uom" class="required">UOM</label>
            <select class="form-control" id="uom" name="uom" required>
              <option value="" disabled selected>Select UOM</option>
              <option value="KG">KG</option>
              <option value="L">L</option>
              
              <!-- Add more options as needed -->
            </select>
        </div>
        <!-- <div class="form-group col-md-1">
          <label for="qty">Qty</label>
          <input type="number" class="form-control" id="qty" name="qty" min="1" required>
        </div>
        <div class="form-group col-md-1">
          <label for="rate">Rate</label>
          <input type="number" class="form-control" id="rate" name="rate" step="0.01" required>
        </div>
      </div> -->
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <!-- Bootstrap JS and dependencies (if needed) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

  <script>
    document.getElementById('ingredient_item_code').addEventListener('input', function() {
        this.value = this.value.toUpperCase();
    });
  </script>
  <script>
    document.getElementById('ingredient_item_description').addEventListener('input', function() {
        this.value = this.value.toUpperCase();
    });
  </script>
  <script>
    document.getElementById('UOM').addEventListener('input', function() {
        this.value = this.value.toUpperCase();
    });
  </script>
</body>
</html>
