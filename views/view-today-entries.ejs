        <li class="nav-item"><a href="/admin-logout" class="nav-link">Logout</a></li>
    </ul>
    </div>
    <div class="main-content"> 
        <div class="container">
            <h3 style="font-family: Georgia, 'Times New Roman', Times, serif; font-size:xx-large; font-weight:bolder; color: #56606a;">Employee Entries</h3>
            <button class="btn btn-secondary mb-3 btn-sm" id="exportEmpEntries">Download Employee Excel</button>
            <table class="table table-bordered table custom-table" id="todayempentry">
                <thead>
                    <tr>
                        <th>Order Type</th>
                        <th>Quantity</th>
                        <th>Employee Name</th>
                        <th>Employee Code</th>
                        <th>Department</th>
                        <th>Designation</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (entry of entries){ %>
                    <tr>
                        <td><%= entry.orders %></td>
                        <td><%= entry.quantity %></td>
                        <td><%= entry.name %></td>
                        <td><%= entry.employeeCode %></td>
                        <td><%= entry.department %></td>
                        <td><%= entry.designation %></td>
                        <td><%= new Date(entry.date_from).toLocaleDateString('en-GB') %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            
            <h3 style="font-family: Georgia, 'Times New Roman', Times, serif; font-size:xx-large; font-weight:bolder; color: #56606a;">Guest Entries</h3>
            <button class="btn btn-secondary mb-3 btn-sm" id="exportGuestEntries">Download Guest Excel</button>
            <table class="table table-bordered table custom-table" id="todayguestentry">
                <thead>
                    <tr>
                        <th>Order Type</th>
                        <th>Employee Name</th>
                        <th>Guest Name</th>
                        <th>Guest Company</th>
                        <th>Guest Designation</th>
                        <th>Remarks</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (entry of guestentries){ %>
                    <tr>
                        <td><%= entry.orders %></td>
                        <td><%= entry.employee_name %></td>
                        <td><%= entry.guestName %></td>
                        <td><%= entry.guestCompany %></td>
                        <td><%= entry.guestdesignation %></td>
                        <td><%= entry.remarks %></td>
                        <td><%= new Date(entry.date_from).toLocaleDateString('en-GB') %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.5/xlsx.full.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#todayempentry').DataTable({
                "paging": true,
                "order": [[0, 'asc']]
            });
            $('#todayguestentry').DataTable({
                "paging": true,
                "order": [[0, 'asc']]
            });
            
            function exportTableToExcel(tableId, filename) {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableId), {sheet:"Sheet1"});
                XLSX.writeFile(wb, filename);
            }

            $('#exportEmpEntries').click(function() {
                exportTableToExcel('todayempentry', 'Employee_Entries.xlsx');
            });

            $('#exportGuestEntries').click(function() {
                exportTableToExcel('todayguestentry', 'Guest_Entries.xlsx');
            });
        });
    </script>
</body>
</html>
