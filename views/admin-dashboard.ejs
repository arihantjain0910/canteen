        <!-- Table to display all employee entries -->
        <div>
            <div>
                <h3 style="color: red;">Employee Entries</h3>
                <table class="table table-bordered table custom-table " id="employeeTable">
                    
<thead id="employeeTableHead">
                        <tr style="background-color: rgb(236, 208, 171);">
                          <th>SN No.</th> <!-- Line number column -->
                          <th>Order Type</th>
                          <th>Quantity</th>
                          <th> Employee Name</th>
                          <th>Employee Code</th>
                          <th>Department</th>
                          <th>Designation</th>
                          <th>Date From</th>
                          <!-- <th>Attendence</th> -->
                          <!-- <th>Date To</th> -->
                           <th>Delete Entry</th>
                        </tr>
                    </thead>
                    <tbody id="employeeTableBody">
                        <% let employeeLineNumber = 1; %>
                        <% employees.forEach(employee => { %>
                            <tr >
                              <td><%= employeeLineNumber %></td>
                              <td><%= employee.orders %></td>
                              <td><%= employee.quantity %></td>
                                <td><%= employee.name %></td>
                                <td><%= employee.employeeCode %></td>
                                <td><%= employee.department %></td>
                                <td><%= employee.designation %></td>
                                <td><%= new Date(employee.date_from).toLocaleDateString('en-GB') %></td>
                                <!-- <td><%= new Date(employee.date_to).toLocaleDateString('en-GB') %></td> -->
                                <!-- <td>
                                  <div>
                                    <input type="checkbox" class="form-check-input attendance-checkbox" data-employee-id="<%= employee.id %>" <%= employee.isAttended ? 'checked' : '' %>>
                                  </div>
                                  
                                </td> -->
                                 <td>
                                  <form action="/delete-entry/<%=employee.id%>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                 </form>
                                 </td>
                            </tr>
                            <% employeeLineNumber++; %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div>
                <h3 style="color: red;">Guest Entries</h3>
                <table class="table table-bordered table custom-table" id="guestTable">
                    <thead id="guestTableHead">
                        <tr style="background-color: rgb(236, 208, 171);">
                          <th>SN No.</th> <!-- Line number column -->
                          <th>Order Type</th>
                          <th>Employee Name</th>
                          <th>Guest Name</th>
                          <th>Guest Company</th>
                          <th>Guest Designation</th>
                          <th>Remarks</th>
                          <th>Date </th>
                          <!-- <th>Date To</th> -->
                        </tr>
                    </thead>
                    <tbody id="guestTableBody">
                        <% let guestLineNumber = 1; %>
                        <% guests.forEach(guest => { %>
                            <tr >
                              <td><%= guestLineNumber %></td>
                              <td><%= guest.orders %></td>
                              <td><%= guest.employee_name %></td>  
                              <td><%= guest.guestName %></td>                                
                              <td><%= guest.guestCompany %></td>
                              <td><%= guest.guestdesignation %></td>
                              <td><%= guest.remarks %></td>
                              <td><%= new Date(guest.date_from).toLocaleDateString('en-GB') %></td>
                              <!-- <td><%= new Date(guest.date_to).toLocaleDateString('en-GB') %></td> -->
                            </tr>
                            <% guestLineNumber++; %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
